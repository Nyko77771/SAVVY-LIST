<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>
  <body>
    <div class="wrapper">
      <header>
        <nav>
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link" href="/"
                    >Home <span class="sr-only">(current)</span></a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="list">Create List</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="registration">Register</a>
                </li>
              </ul>
            </div>
          </nav>
        </nav>
      </header>

      <section class="mainSection">
        <div class="logoPart">
          <h1>SAVVY_LIST_LOGO</h1>
        </div>
        <div class="lineDiv"></div>
        <div class="promoText">
          <h2>Welcome to Savvy List - The Best Shopping List App!</h2>
          <p>
            Compare shopping list prices across local supermarkets using our
            comparison app
          </p>
          <button onclick="location.href='list.html';">Enter App</button>
        </div>
        <div class="lineDiv"></div>
        <div class="searchPart">
          <!-- Search form for entering a product -->
          <form id="searchForm" action="" method="post">
            <div>
              <label for="product">Enter Product:</label>
              <input
                type="text"
                name="product"
                id="product"
                class="searchField"
                required
              />
            </div>
            <div class="searchButtons">
              <input type="submit" value="Search" />
            </div>
          </form>
        </div>
        <!-- Section to display suggested products -->
        <div class="suggestionPart" id="suggestionPart">
          <h3>Suggested Products:</h3>
          <ul id="suggestionsList"></ul>
        </div>
      </section>
    </div>
    <%- include("./partials/footer.ejs")%>
  </body>
</html>
