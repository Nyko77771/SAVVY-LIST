<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>
  <body>
    <div class="wrapper">
      <header>
        <div class="logoPart">
          <ul>
            <li><img src="images/logo.png" alt="Savvy List Logo" /></li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <div class="topBadges">
                <a class="nav-link" href="#">
                  <i class="fas fa-shopping-basket basketSymbol"></i>
                  <div
                    class="badge badge-pill badge-danger basketNumberIndicator"
                  >
                    0
                  </div>
                </a>
              </div>
            </li>
          </ul>
        </div>

        <div><%- include("./partials/nav.ejs")%></div>
      </header>

      <!-- Main content section for registration form -->
      <section class="mainSection">
        <!-- Login form -->
        <form id="loginForm" class="loginForm">
          <div>
            <label for="username">Username:</label>
            <input
              type="text"
              name="username"
              id="username"
              class="loginField"
              required
            />
          </div>
          <div>
            <label for="password">Password:</label>
            <input
              type="password"
              name="password"
              id="password"
              class="loginField"
              required
            />
          </div>
          <div class="loginHidden" id="loginHidden"></div>
          <div class="loginButtons">
            <!-- Submit button for form submission -->
            <input type="submit" value="Login" id="loginBtn" />

            <!-- Button to cancel and redirect to home page -->
            <input type="button" value="Cancel" onclick="location.href='/';" />
            <!--ADD JS CANCEL FINCTION-->
          </div>
        </form>
      </section>

      <%- include("./partials/footer.ejs")%>
    </div>
  </body>
</html>
